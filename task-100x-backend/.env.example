# Example Environment Variables for Task-100x Backend
# Copy this file to .env and fill in your actual values

# ============================================
# DATABASE CONFIGURATION
# ============================================
# Supabase PostgreSQL connection string
# Get this from: Supabase Dashboard → Settings → Database → Connection string
DATABASE_URL="postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT].supabase.co:5432/postgres"

# ============================================
# JWT AUTHENTICATION
# ============================================
# Secret key for JWT token signing (generate with: openssl rand -hex 32)
SECRET_KEY="your-super-secret-jwt-key-here-make-it-long-and-random"

# JWT algorithm (recommended: HS256)
ALGORITHM="HS256"

# Token expiration time in minutes (default: 180 = 3 hours)
ACCESS_TOKEN_EXPIRE_MINUTES="180"

# ============================================
# SUPABASE CONFIGURATION
# ============================================
# Your Supabase project URL
# Get this from: Supabase Dashboard → Settings → API
SUPABASE_URL="https://your-project-id.supabase.co"

# Your Supabase anon key or service role key
# Get this from: Supabase Dashboard → Settings → API
SUPABASE_KEY="your-supabase-anon-or-service-key"

# ============================================
# GROQ AI CONFIGURATION (Optional)
# ============================================
# Groq API key for AI features
# Get this from: https://console.groq.com/keys
GROQ_API_KEY="your-groq-api-key-here"

# ============================================
# TWILIO SMS CONFIGURATION (Optional)
# ============================================
# Twilio credentials for SMS features
# Get these from: https://console.twilio.com/
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="+1234567890"

# ============================================
# DEPLOYMENT CONFIGURATION
# ============================================
# Port for local development (Render will override this)
PORT="8000"

# Environment (development/production)
ENVIRONMENT="development"
